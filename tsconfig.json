{
  "compilerOptions": {
      "module": "commonjs",
      "target": "es2017",
      "lib": ["esnext"],
      "skipLibCheck": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "strict": true,
      "forceConsistentCasingInFileNames": true,
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "outDir": "lib",
      //"isolatedModules": true,
      "jsx": "react"
  },
  "include": ["src/**/*"],
  "exclude": ["src/__tests__/*"]
}